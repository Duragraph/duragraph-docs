---
import '../styles/landing.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'DuraGraph Blog - Insights on AI orchestration, agent frameworks, and the LLM ecosystem.',
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | DuraGraph Blog</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background">
    <!-- Header - Matches landing page exactly -->
    <header
      class="fixed top-0 left-0 right-0 z-50 bg-background/90 backdrop-blur-sm border-b border-border"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-14">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2">
            <img src="/logo.svg" alt="DuraGraph" class="w-7 h-7" />
            <span class="font-semibold text-foreground">DuraGraph</span>
          </a>

          <!-- Desktop Navigation - Same as landing page -->
          <nav class="hidden md:flex items-center gap-8">
            <a
              href="/#why"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >Why DuraGraph</a
            >
            <a
              href="/#how"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >How It Works</a
            >
            <a
              href="/#use-cases"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >Use Cases</a
            >
            <a
              href="/docs/introduction"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors">Docs</a
            >
            <a href="/blog" class="text-sm text-foreground font-medium transition-colors">Blog</a>
          </nav>

          <!-- Actions -->
          <div class="flex items-center gap-2">
            <a
              href="https://github.com/duragraph/duragraph"
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-muted-foreground hover:text-foreground hover:bg-secondary transition-colors"
              aria-label="GitHub"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path></svg
              >
            </a>

            <!-- Theme Toggle -->
            <button
              id="theme-toggle"
              class="p-2 text-muted-foreground hover:text-foreground hover:bg-secondary transition-colors"
              aria-label="Toggle theme"
            >
              <svg
                id="theme-icon-light"
                class="w-4 h-4 hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                ></path></svg
              >
              <svg
                id="theme-icon-dark"
                class="w-4 h-4 hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                ></path></svg
              >
            </button>

            <a
              href="/docs/introduction"
              class="hidden sm:inline-flex items-center px-4 py-2 text-sm font-medium text-primary-foreground bg-primary hover:bg-primary/90 transition-colors"
            >
              Get Started
            </a>
          </div>
        </div>
      </div>
    </header>

    <main class="pt-14">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-border py-12 mt-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-2">
            <img src="/logo.svg" alt="DuraGraph" class="w-5 h-5" />
            <span class="text-sm text-muted-foreground">DuraGraph</span>
          </div>
          <nav class="flex items-center gap-6">
            <a
              href="/docs/introduction"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors">Docs</a
            >
            <a
              href="/blog"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors">Blog</a
            >
            <a
              href="https://github.com/duragraph/duragraph"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >GitHub</a
            >
            <a
              href="/privacy"
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
              >Privacy</a
            >
          </nav>
        </div>
      </div>
    </footer>

    <script>
      // Theme detection and toggle (syncs with Starlight's theme system)
      const storageKey = 'starlight-theme';

      function getThemePreference() {
        const stored = localStorage.getItem(storageKey);
        if (stored === 'dark' || stored === 'light') return stored;
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
      }

      function updateTheme(theme: string) {
        document.documentElement.classList.toggle('dark', theme === 'dark');
        updateThemeIcon(theme);
      }

      function updateThemeIcon(theme: string) {
        const lightIcon = document.getElementById('theme-icon-light');
        const darkIcon = document.getElementById('theme-icon-dark');
        if (lightIcon && darkIcon) {
          lightIcon.classList.toggle('hidden', theme !== 'dark');
          darkIcon.classList.toggle('hidden', theme === 'dark');
        }
      }

      // Apply theme on load
      const currentTheme = getThemePreference();
      updateTheme(currentTheme);

      // Theme toggle button
      document.getElementById('theme-toggle')?.addEventListener('click', () => {
        const newTheme = document.documentElement.classList.contains('dark') ? 'light' : 'dark';
        localStorage.setItem(storageKey, newTheme);
        updateTheme(newTheme);
      });

      // Listen for system preference changes
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (!localStorage.getItem(storageKey)) {
          updateTheme(e.matches ? 'dark' : 'light');
        }
      });
    </script>
  </body>
</html>
